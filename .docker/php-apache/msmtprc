# Set default values for all following accounts.
defaults
auth           off
tls            off
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Mailhog
account        mailhog
host           mailhog
port           1025
from           username@mailhog.com
user           username
password       plain-text-password

# Set a default account
account default : mailhog